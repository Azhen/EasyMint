<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent" style="@style/ButtonBar"
				>
				<ImageButton android:id="@+id/status" android:layout_width="wrap_content" 
					android:layout_height="wrap_content" android:src="@drawable/transaction_status_unreconciled_2"
					android:background="@drawable/wp_button"/>
				<Button android:layout_width="wrap_content" android:gravity="center"
					android:text="1989-10-28" android:textColor="#FF464646" android:id="@+id/date"
					android:layout_height="wrap_content" android:layout_weight="1"
					android:background="@drawable/wp_button" />
				<Button android:layout_width="wrap_content" android:gravity="center"
					android:textColor="#FF464646" android:text="12:14" android:id="@+id/time"
					android:layout_height="wrap_content" 
					android:background="@drawable/wp_button"/>
			</LinearLayout>